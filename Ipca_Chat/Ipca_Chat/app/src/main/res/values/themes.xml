<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Projeto" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Projeto.Fullscreen" parent="Theme.Projeto">
        <item name="android:actionBarStyle">@style/Widget.Theme.Projeto.ActionBar.Fullscreen</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.Projeto.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>

    <style name="MyPickerStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/purple_500</item>
        <!--selected Item color-->
        <item name="colorControlActivated">@color/green</item>
        <!-- arrow bordercolor(<>)-->
        <item name="android:selectableItemBackgroundBorderless">@color/white</item>
        <!-- Highlight item color-->
        <item name="colorControlHighlight">@color/grey2</item>
        <!--Calender Background color -->
        <item name="android:windowBackground">@color/white</item>
        <!-- Ok Cancel Color-->
        <item name="android:textColor">@color/black</item>
        <!-- Week TextColor-->
        <item name="android:textColorSecondary">@color/grey</item>
        <!-- Calender Number color arrow color (< >) -->
        <item name="android:textColorPrimary">@color/black</item>
        <!--day , month-->
        <item name="android:textColorPrimaryInverse">@color/white</item>
        <!-- year-->
        <item name="android:textColorSecondaryInverse">@color/white</item>
        <item name="android:buttonBarButtonStyle">@style/DatePickerTheme.ButtonBarStyle</item>
    </style>

    <style name="DatePickerTheme.ButtonBarStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@android:color/black</item>
    </style>
</resources>